<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--
    This resource dictionary contains various dimensions shared between the
    `Channel` and `ChannelSettingLamp` controls.
    -->

    <!--
    Height of the content sections on the bars at the top of each channel, in px.
    
    NB: this should be the same as the header height minus margin in
    Themes\Generic.xaml.  Eventually, some clean way of organising this to
    avoid the duplication should occur.
    -->
    <system:Double x:Key="ChannelBarHeight">28</system:Double>

    <!--
    Thickness of the margin used for channel bar content such as
    lamps and buttons.
    -->
    <Thickness x:Key="ChannelBarMargin">2px</Thickness>
    
    <!-- ChannelBarHeight - (2*ChannelBarMargin) -->
    <system:Double x:Key="ChannelBarHeightMinusMargin">24</system:Double>


</ResourceDictionary>