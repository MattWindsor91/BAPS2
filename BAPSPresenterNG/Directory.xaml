<UserControl x:Class="BAPSPresenterNG.Directory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BAPSPresenterNG"
             mc:Ignorable="d" 
             d:DesignHeight="240" d:DesignWidth="300" MaxHeight="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name="nameRow" Height="Auto" />
            <RowDefinition Name="fileListRow"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <local:Header Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                      Icon="FolderOpen"
                      Text="{Binding Name, FallbackValue='Unknown Directory'}"
                      x:Name="directoryHeader">
            <Button Width="32px">
            </Button>
        </local:Header>
        <ListBox Grid.Row="1" Grid.Column="0" Name="fileList"
                 ItemsSource="{Binding Files}"
                 >
        </ListBox>
    </Grid>
</UserControl>
