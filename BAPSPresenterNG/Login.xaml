<Window x:Class="BAPSPresenterNG.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BAPSPresenterNG"
        mc:Ignorable="d"
        Title="BAPS Presenter: Please Login" Height="180" Width="240"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"       
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="labelCol" />
            <ColumnDefinition Name="controlCol" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Name="usernameRow" />
            <RowDefinition Name="passwordRow" />
            <RowDefinition Name="serverRow" />
            <RowDefinition Name="portRow" />
            <RowDefinition Name="buttonRow" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0"  Grid.Column="0" Name="usernameLbl">Username:</Label>
        <TextBox Grid.Row="0" Grid.Column="1" Name="usernameTxt"></TextBox>
        <Label Grid.Row="1" Grid.Column="0" Name="passwordLbl">Password:</Label>
        <PasswordBox Grid.Row="1" Grid.Column="1" Name="passwordTxt"></PasswordBox>
        <Label Grid.Row="2" Grid.Column="0" Name="serverLbl">Server:</Label>
        <TextBox Grid.Row="2" Grid.Column="1" Name="serverTxt"></TextBox>
        <Label Grid.Row="3" Grid.Column="0" Name="portLbl">Port:</Label>
        <TextBox Grid.Row="3" Grid.Column="1" Name="portTxt"></TextBox>
        
        <StackPanel Name="buttonPanel" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Name="loginBtn" IsDefault="True">Login</Button>
            <Button Name="cancelBtn" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
