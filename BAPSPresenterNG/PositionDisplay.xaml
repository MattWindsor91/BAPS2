<UserControl x:Class="BAPSPresenterNG.PositionDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BAPSPresenterNG"
             x:Name="positionDisplay"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Content="{Binding Path=SubText, ElementName=positionDisplay, FallbackValue=subText}"
               Name="subTextLabel">
        </Label>
        <Label Content="{Binding Path=MainText, ElementName=positionDisplay, FallbackValue=mainText}"
               HorizontalAlignment="Center"
               FontSize="14pt"
               FontFamily="Consolas"
               Name="mainTextLabel">
        </Label>
    </StackPanel>
</UserControl>
